<!--
  Launches calibration program for stereo cameras, using checkerboard pattern.
-->
<launch>
  <!-- Type of calibration pattern -->
  <arg name="checkerboard" value="true" />
  <arg name="acircles" value="false" />
  <arg name="circles" value="false" />

  <arg name="start_stereo default="false" />
  
  <include file="$(find vision_start)/config/stereo.xml" />
    <arg name="start_stereo" value="$(arg start_stereo)" />
  </include>

  <!-- If using checkerboard calibration pattern -->
  <group if="$(arg checkerboard)">
    <node pkg="camera_calibration" type="cameracalibrator.py" name="stereo_calibration_checkerboard"
      args="--size 8x6 --square 0.054 right:=/stereo/right/image_raw left:=/stereo/left/image_raw right_camera:=/stereo/right left_camera:=stereo/left --approximate=0.005">
    </node>
  </group>

  <!-- If using asymmetric circles calibration pattern -->
  <group if="$(arg acircles)">
    <node pkg="camera_calibration" type="cameracalibrator.py" name="stereo_calibration_acircles"
      args="">
    </node>
  </group>

  <!-- If using circles calibration pattern -->
  <group if="$(arg circles)">
    <node pkg="camera_calibration" type="cameracalibrator.py" name="stereo_calibration_circles"
      args="">
    </node>
  </group>

</launch>
